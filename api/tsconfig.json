{
  "compilerOptions": {
    "target": "es6",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "sourceMap": true,
    "outDir": "./build",

    "baseUrl": "./src",
    //  You can specify a base directory to resolve non-absolute module names
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
